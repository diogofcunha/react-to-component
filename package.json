{
  "name": "react-to-component",
  "version": "0.0.0-get-name",
  "description": "Blazing fast library to componentify imperative or functional apis",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/"
  ],
  "author": "Diogo Cunha <diogofncunha@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "release": "semantic-release",
    "lint:prettier": "prettier --ignore-path .gitignore --write './**/*.{js,jsx,ts,tsx}'",
    "lint:tslint": "tslint './src/**/*.{ts,tsx}' -t verbose",
    "lint": "yarn lint:prettier && yarn lint:tslint"
  },
  "dependencies": {
    "typescript": "^3.1.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/git": "^7.0.4",
    "@semantic-release/npm": "^5.0.4",
    "@types/jest": "^23.3.3",
    "@types/react": "^16.4.15",
    "husky": "^1.1.1",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.7.0",
    "react": "^16.5.2",
    "semantic-release": "^15.9.17",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [],
    "testRegex": ".*/__tests__/.*\\.(test|spec)\\.ts$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn lint",
      "pre-push": "yarn test"
    }
  }
}
